html
    head
        style(type='text/css').
            @import url(http://fonts.googleapis.com/earlyaccess/jejugothic.css);
            *{
                font-family: "Jeju Gothic", serif;
                margin: 0;
                padding: 0;
                list-style: none;
                font-weight: Medium;
                font-size: 14px;
                text-decoration: none;
            }
            #container{
                position:absolute;
                width:100%;
                height:100%;
            }
            #lists{
                width:90%;
                height:90px;
                margin-left:5%;
                margin-bottom:20px;
                display:flex;
                flex-direction:row;
            }
            #lists li{
                width:100%;
                display:flex;
            }
            img{
                width:70px;
                height:90px;
            }
            #title, #date, #link{
                height:90px;
                display:flex;
                justify-content:center;
                align-items:center;
                font-size:15px;
            }
            #title{
                width:50%;
            }
            #date{
                width:40%;
            }
            #link{
                width:10%;
            }
            #top{
                width:100%;
                height:100px;
                display:flex;
                justify-content:center;
                align-items:center;
                font-size:2rem;
            }
    body
        #container
            #top 나의 대여 내역
            ul#listWrapper
                    for user in info
                        #lists
                            li
                                img(src=user.poster, alt=user.title)
                                p#title= user.title
                                br
                                p#date= "~ "+ user.expireDate
                                p#link
                                    a(href=user.torrentUrl) 재대여